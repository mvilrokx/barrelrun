  <%= f.error_messages %>
   <div class="edit_form">
     <fieldset>
       <%= f.label :username %><span class="div_texbox"><%= f.text_field :username, :class=>"fillout02" %></span>
       <%= f.label :password %><span class="div_texbox"><%= f.password_field :password %></span>
       <%= f.label :remember_me %> <%= f.check_box :remember_me %><br>
     </fieldset>
    <%= f.submit "Sign in" %> or 
