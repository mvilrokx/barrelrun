<!DOCTYPE html>
<html>
<head>
   <title>Barrelrun - <%= yield(:title)|| "Discover and connect" %></title>
   <%=stylesheet_link_tag "point2wine",:media=> "all" %>
   <link type="text/css" rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/blitzer/jquery-ui.css" />
   <script type="text/javascript"><!--
     function authToken(){
       return '<%= form_authenticity_token if protect_against_forgery? -%>';
     }
   //--></script>
   <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"></script>
   <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.2/jquery-ui.min.js"></script>
   <script src="/javascripts/jquery.tools.min.js"></script>
   <script src="/javascripts/jquery.ui.stars.js"></script>
   <%=stylesheet_link_tag "jquery.ui.stars",:media=> "all" %>
   <link rel="shortcut icon" href="../images/favicon.ico" />
   
   <%= javascript_include_tag 'application' %>
   <%= ajaxful_rating_style %>
</head>
<body>
   <div id="top_line">
      <div id="top_line_container">
         <div id="user_nav">
         <% if user_signed_in? %>
            <ul>
               <li><%= link_to "Signed in as " + current_user.username, edit_user_registration_path %></li>
               <li><%= link_to "Sign Out", destroy_user_session_path %></li>
               <li><%= link_to "Help" %></li>
            </ul>   
         <% elsif winery_signed_in? %>
            <ul>
               <li><%= link_to "Signed in as " + current_winery.username, edit_winery_registration_path %></li>
               <li><%= link_to "Sign Out", destroy_winery_session_path %></li>
               <li><%= link_to "Help" %></li>
            </ul>               
         <% else %>
            <ul>
               <li><%= link_to "User Registration", new_user_registration_path %></li>
               <li><%= link_to "Winery Registration", new_winery_registration_path %></li>
               <li><%= link_to  content_tag(:span, 'User Sign In'), new_user_session_path, :class=>"signin" %>
                  <%= render :partial => "layouts/inline_user_sign_in" %>
               </li>
               <li><%= link_to  content_tag(:span, 'Winery Sign In'), new_winery_session_path, :class=>"signin" %>
                  <%= render :partial => "layouts/inline_winery_sign_in" %>
               </li>
            </ul>
         <% end %>
         </div>      
      </div>      
   </div>

   <div id="header">
      <div id="header_container">
         <div id="logo">
            <%= link_to  image_tag("../images/Barrelrun.jpg", :border=>0), root_path %>
         </div>
         <div id="menu_bar">
            <div id="menu_bar_container">
               <ul>
                  <li><%= link_with_active "Home", root_path %></li>
               <% if user_signed_in? %>
                  <li><%= link_with_active "Account", edit_user_registration_path %></li>
                  <li><%= link_with_active "My Favorites", favorites_path %></li>
               <% end %>
               <% if winery_signed_in? %>
                  <li><%= link_with_active "Account", edit_winery_registration_path %></li>
                  <li><%= link_with_active "Wines", wines_path %></li>
                  <li><%= link_with_active "Events", events_path %></li>
                  <li><%= link_with_active "Specials", specials_path %></li>
                  <li><%= link_with_active "Awards", awards_path %></li>
               <% end %>
               </ul>
            </div>
         </div>
      </div>
   </div>

   <div id="canvas">
      <div id="main">
      <% flash.each do |key, msg| %>
         <% content_tag :script, :type => "text/javascript" do -%>
            $(document).ready(function() {
               addNotice("<p><%= msg %></p>");
            });   
         <% end %>
      <% end %>
         <div id="main_body">
            <%=yield :layout%>
         </div>   
      </div>
   </div>

   <div id="footer">
   </div>

   <div id="message_box">
   </div>

</body>
</html>
