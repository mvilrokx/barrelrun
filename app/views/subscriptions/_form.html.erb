<div class="edit_form">
  <fieldset>
    <% form_for @subscription do |f| %>
      <%= f.error_messages %>
      <%= f.label :plan_id %>
      <span class="div_texbox">
        <%= f.select :plan_id, [["Free Level", "FREE_LEVEL"], ["Bronze Level", "BRONZE_LEVEL"], ["Silver Level", "SILVER_LEVEL"], ["Gold Level", "GOLD_LEVEL"]], {:required => true}, {:class => "fillout02"} %>
    	</span>
      <%= f.label :credit_card %>
      <span class="div_texbox">
    	<%= collection_select(:subscription, :credit_card, current_winery.credit_cards.all, :token, :card_number, {:required => true}, {:class => "fillout02"}) %>
    	</span>
      <span class="div_texbox">            
        <%= f.submit "Save" %>
     	</span>
    <% end %>
  </fieldset>
</div>
