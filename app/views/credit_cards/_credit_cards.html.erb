<div id="credt_cards">
  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @credit_cards, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @credit_cards %>
    </div>
  </div>

  <div style="overflow: auto;">
    <table style="background: white;">
      <tr>
        <th>Card Number</th>
        <th>Prefered Payment Method</th>
        <th>Type</th>
        <th>Expiration Date</th>
        <th colspan=3>Action</th>
      </tr>
    <% for credit_card in @credit_cards %>
      <tr>
        <td><%=h credit_card.card_number %></td>

        <td><%= credit_card.default == "Yes" ? "Yes" : link_to("No", { :action => "make_default", :token => credit_card.token }, :method => :post, :title => "Click to make Prefered Payment Method") %></td>
        <td><%=h credit_card.card_type %></td>
        <td><%=h credit_card.expiration_date.try(:strftime,'%m/%Y') %></td>
        <td><%= show_link_image credit_card, :class => 'dialog_form_link' %></td>
        <td><%= edit_link_image edit_credit_card_path(credit_card), :class => 'dialog_form_link' %></td>
        <td><%= delete_link_image credit_card, :class => 'delete' %></td>
      </tr>
    <% end %>
    </table>
  </div>

  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @credit_cards, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @credit_cards %>
    </div>
  </div>

</div>

