<tr>
  <td><%=h event.title %></td>
  <td><%=h event.description %></td>
  <td><%=h event.place %></td>
  <td><%=h event.start_date.try(:strftime,'%m/%d/%Y') %></td>
  <td><%=h event.end_date.try(:strftime,'%m/%d/%Y') %></td>
  <td><%=h event.price %></td>
  <td><%=h event.contact_info_name %></td>
  <td><%=h event.contact_info_phone %></td>
  <td><%=h event.contact_info_email %></td>
  <td><%=h event.invitation_type %></td>
  <% if event.pictures.length > 0 then %>
  <td><%= image_tag event.pictures[0].url(:thumb) %></td>
  <% else %>
  <td></td>
  <% end %>
  <td><%= edit_link_image edit_event_path(event), :class => 'dialog_form_link' %></td>
  <td><%= delete_link_image event, :class => 'delete' %></td>
</tr>

