  <div id='top_list'>
  <h2>Top Wines</h2>
  <% @wines.each do |wine| %>
    <% if user_signed_in? %>
      <div class="stars">
        <% form_for [wine, Rating.new] do |f| %>
          <%= render_stars wine %>
        <% end %>
      </div>
      <div class="action-menu">
        <a class="action-menu-link" href="#"><span class="action-span">action</span></a>
        <div style="display: none;" class="list-action-menu">
          <ul>
            <li><a href="/wines/<%= wine.id%>/comments" class="dialog_form_link">Comments</a></li>
              <% if wine.favorites.find_by_user_id(current_user) %>
                      <li><a href="/wines/<%= wine.id%>/favorites/<%= wine.favorites.find_by_user_id(current_user).id %>" class="remove_as_favorite">Remove From My Favorites</a></li>
              <% else %>
                      <li><a href="/wines/<%= wine.id%>/favorites" class="add_as_favorite">Add To My Favorites</a></li>
              <% end %>
            <li><a href="/wines/<%= wine.id%>"  class="dialog_form_link">Show Details</a></li>
            <li><a class="map-wine" href="#" data-winery-lat=<%=h wine.winery.lat %> data-winery-lng=<%=h wine.winery.lng %> >Map It</a></li>
          </ul>
        </div>
      </div>
    <% else %>
      <div class="stars">
        <form action="/wines/<%= wine.id %>/rating/" method="post">
          <%= render_stars wine, true %>
        </form>
      </div>
    <% end %>       
    <a class="list_element" href="#"><%=h wine.name %> (<%= number_to_currency(wine.price) %>)
      <img id="heart_<%=h wine.id %>" src="../images/thumb_up.png"
      <% if wine.favorites.find_by_user_id(current_user) %>
      >
      <% else %>
      style="display: none;">
      <% end %>
    </a>   
  <% end %>
</div>
