<div class="span-17 entry_form last">
  <div class="span-17 last">
    <div class="span-12 colborder">

      <div class="span-6">
        <div class="span-6 last">
          <% if @wine.pictures.length > 0 then %>
            <%= image_tag @wine.pictures[@pic_idx.to_i].url(:small), :border=>0, :alt=>@wine.name, :size=>'200x200' %>
          <% else %>
            <%= image_tag '../images/no_image_available.png', :border=>0, :alt=>'No Image Found', :size=>'200x200' %>        
          <% end %>
        </div>

        <div class="span-5 last" style="overflow: auto;">
          <div style="width: <%= @wine.pictures.length*60 %>px;">
            <ul>
            <% @wine.pictures.each_with_index do |pic, idx| -%>
              <li style="display: inline;"><%= link_to image_tag (pic.url(:small), :border=>0, :size=>'50x50'),{:pic_idx=>idx} %></li>
            <% end -%>
            <ul>
        </div>
        </div>
      </div>

      <div class="span-6 last">
        <div class="span-6 last">
          <h3><%=h @wine.name %></h3>
          <h4>Made by <%= link_to @wine.winery.winery_name, @wine.winery %></h4>
        </div>
        <div class="span-6 append-bottom last">
          <% if user_signed_in? %>
            <div class="stars">
              <form action="/wines/<%= @wine.id %>/rating/" method="post">
                <%= render_stars @wine %>
              </form>
            </div>
          <% else %>
            <div class="stars">
                <%= render_stars @wine, true %>
            </div>
          <% end %>
        </div>

        <% if user_signed_in? %>
          <div class="span-6 last">
          <% if @wine.favorites.find_by_user_id(current_user) %>
            <a href="/wines/<%= @wine.id%>/favorites/<%= @wine.favorites.find_by_user_id(current_user).id %>" class="remove_as_favorite">Remove From My Favorites</a>
          <% else %>
            <a href="/wines/<%= @wine.id%>/favorites" class="add_as_favorite">Add To My Favorites</a>
          <% end %>
          </div>

          <div class="span-6 last">
            Share
          </div>
        <% end %>

        <div class="span-6 last" style="height: 110px; overflow: auto; margin: 10px 0px;">
          <%=h @wine.description %>
        </div>
      </div>
    </div>
    <div class="span-4 last" style="font-size: 22px;">
      <ul style="list-style: none; margin: 0px; padding: 0px;" >
        <li>Vintage: <strong><%=h @wine.vintage %></strong></li>
        <li>Type: <strong><%=h @wine.wine_type %></strong></li>
        <li>Varietal: <strong><%=h @wine.varietal %></strong></li>
        <li>Price: <strong><%=h number_to_currency(@wine.price) %></strong></li>
      </ul>
    </div>
    <hr/>
  </div>
  <div class="span-17 last">
    <div class="span-3">
      <h3>Comments</h3>
    </div>
    <div class="span-14 last">
    <% if user_signed_in? %>
      <%= link_to "#{image_tag('../images/pencil.png', :border=>0, :alt=>'Write a comment')} Write a new Comment", wine_comments_path(@wine), :title=> "Write a new Comment", :class=>"write_comment" %>
    <% else %>
      <%= link_to "Register", new_user_registration_path %> or <%= link_to  content_tag(:span, 'Login'), new_user_session_path %> to add comments!
    <% end %>
    </div>
  </div>

  <div class="span-16 last comments">
  <% form_for [@wine, Comment.new] do |f| %>  
    <%= f.error_messages %>
    <%= f.text_area :content, :rows => 3, :style=>"height: 100%; width: 100%;"  %>
    <%= f.submit "Save Comment" %>
  <% end %>
  </div>

  <div id="comments"><%= render :partial => "shared/comments", :locals =>{:commentable => @wine} %></div>

</div>

<%= link_to 'Edit', edit_wine_path(@wine) %> |
<%= link_to 'Back', wines_path %>

