<div class="span-17 last">
  <div class="span-3">
    <h3>Comments</h3>
  </div>
  <div class="span-14 last">
  <% if user_signed_in? %>
    <%= link_to "#{image_tag('../images/pencil.png', :border=>0, :alt=>'Write a comment')} Write a new Comment", path, :title=> "Write a new Comment", :class=>"write_comment" %>
  <% else %>
    <%= link_to "Register", new_user_registration_path %> or <%= link_to content_tag(:span, 'Login'), new_user_session_path %> to add comments!
  <% end %>
  </div>
</div>
