<div id="home" class="current">
  <div class="toolbar">
    <h1>Wines</h1>
      <a href="/">Back</a>
  </div>
  <div class="body">
       <ul>
       	<% for wines in @wines %>
        <li class="arrow">
           <table>    
           <tr> 
        	<% if wines.pictures.length > 0 then %>
          		<%= image_tag wines.pictures[0].url(:thumb) %>
        	<% end %>
            <td>
            	<div><%= link_to h(wines.name), wines %> </div>
            	<div><%=h wines.winery.city %>, <%=h wines.winery.state %> </div>
            	<div><%=h wines.description %> </div>
	  <% if user_signed_in? %>
            <div class="stars">
              <form action="/wines/<%= @wine.id %>/rating/" method="post">
                <%= render_stars wines %>
              </form>
            </div>
          <% else %>
            <div class="stars">
                <%= render_stars wines, true %>
            </div>
          <% end %>
	</div>
            </td>
            </tr>
             </table>                     
         </li>
        <% end %>
    </ul>  
</div>   
</div>
