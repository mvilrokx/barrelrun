<div id="home" class="current">

  <div class="toolbar">
      <h1>Specials</h1>
      <a class="button cancel" href="\">Back</a>
  </div>
  
  <div class="body">
       <ul>
       	<% for specials in @specials %>
        <li class="arrow">
           <table>    
           <tr> 
        	<% if specials.pictures.length > 0 then %>
          		<%= image_tag specials.pictures[0].url(:thumb) %>
        	<% end %>
            <td>
            	<div><%= link_to h(specials.name), specials %> </div>
            	<div><%=h specials.description %> </div>
            </td>
            </tr>
             </table>                     
         </li>
        <% end %>
    </ul>  
</div>   
  
</div>
