<div id="specials">
  <div class="list">
    <div class="pagination">
      <div class="span-13">
        <%= will_paginate @specials, :container => false %>
      </div>
      <div class="page_info span-7 last">
        <%= page_entries_info @specials %>
      </div>
    </div>

    <div style="overflow: auto;">
      <table style="background: white;">
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Pictures</th>
          <th colspan=3>Action</th>
        </tr>
      <% for special in @specials %>
        <tr>
          <td><%=h special.title %></td>
          <td><%=h special.description %></td>
          <td><%=h special.start_date.try(:strftime,'%m/%d/%Y') %></td>
          <td><%=h special.end_date.try(:strftime,'%m/%d/%Y') %></td>
        <% if special.pictures.length > 0 then %>
        <td><%= image_tag special.pictures[0].url(:thumb) %></td>
        <% else %>
        <td></td>
        <% end %>
          <td><%= edit_link_image edit_special_path(special), :class => 'dialog_form_link' %></td>
          <td><%= delete_link_image special, :class => 'delete' %></td>
        </tr>
      <% end %>
      </table>
    </div>

    <div class="pagination">
      <div class="span-13">
        <%= will_paginate @specials, :container => false %>
      </div>
      <div class="page_info span-7 last">
        <%= page_entries_info @specials %>
      </div>
    </div>
  </div>
</div>

