<div class="span-6">
  <div class="span-6 last">
    <% if object.pictures.length > 0 then %>
      <div class="gallery_images" style="height: 278px;">
        <% object.pictures.each_with_index do |pic, idx| -%>
          <%= link_to image_tag(pic.url(:micro), :alt=>pic.title), pic.url(:small), :title=> "Picture Gallery" %>
        <% end -%>
      </div>
    <% else %>
      <%= image_tag 'no_image_available.png', :border=>0, :alt=>'No Image Found', :size=>'200x200' %>
    <% end %>
  </div>
</div>

