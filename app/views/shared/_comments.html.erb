<% span ||= 17 %>
<div class="<%= "span-#{span} last" %>" style="overflow:auto; height:120px;">
  <% commentable.comments.each do |comment| %>
  <div class="<%= "span-#{span-1} last comment_line" %>">
    <div class="span-3">
      <div class="span-2 colborder">
        <%=h comment.user.username %>
      </div>
      <% if comment.user.picture %>
      <div class="span-2 colborder">
        <%= image_tag comment.user.picture[0].url(:micro) %>
      </div>
      <% end %>
    </div>

    <div class="<%= "span-#{span-5} last" %>">
      <div class="<%= "span-#{span-5} last" %>">
        <%=h comment.created_at.strftime('%m/%d/%Y') %>
      </div>
      <div class="<%= "span-#{span-5} last" %>">
        <%=h comment.content %>
      </div>
    </div>

  </div>
  <% end %>
</div>
