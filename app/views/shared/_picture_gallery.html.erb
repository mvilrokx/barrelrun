<div class="span-6">
  <div class="span-6 last">
    <% if object.pictures.length > 0 then %>
      <div style="height: 278px;">
        <% object.pictures.each_with_index do |pic, idx| -%>
          <%= link_to image_tag(pic.url(:thumb), :alt=>pic.title), pic.url(:large), :title=> "Picture Gallery", :rel=>"prettyPhoto[wine_gal]" %>
        <% end -%>
      </div>
    <% else %>
      <%= image_tag '../images/no_image_available.png', :border=>0, :alt=>'No Image Found', :size=>'200x200' %>        
    <% end %>
  </div>
</div>

