#pictures
  .pagination
    .span-13
      = will_paginate @pictures, :container => false
    .page_info.span-7.last
      = page_entries_info @pictures
  %div{:style => "overflow: auto;"}
    %table{:style => "background: white;"}
      %tr
        %th Title
        %th Name
        %th Size
        %th Picture
        %th{:colspan => "2"} Action
      - for picture in @pictures
        %tr
          %td= h picture.title
          %td= h picture.name
          %td
            = h (picture.file_size/1024).round()
            KB
          %td= image_tag picture.url(:thumb)
          %td= show_link_image picture, :class => 'dialog_form_link'
          %td= delete_link_image picture, :class => 'delete'
  .pagination
    .span-13
      = will_paginate @pictures, :container => false
    .page_info.span-7.last
      = page_entries_info @pictures