%header#header
  #content
    #signed-in
      - if user_signed_in?
        = link_to "Signed in as " + current_user.username, edit_user_registration_path
        = link_to "Sign Out", destroy_user_session_path, :method=>'delete'
      - elsif winery_signed_in?
        = link_to "Signed in as " + current_winery.username, edit_winery_registration_path
        = link_to "Sign Out", destroy_winery_session_path, :method=>'delete'
      - else
        = link_to "Sign in", user_session_path
    #company-logo
      = link_to image_tag("barrelrun/beta_logo_white.png"), root_path, :id => "barrelrun-logo"
    #search-box
      = form_tag({:controller => "/searches", :action => "search"}, :method => :get, :id=>"search") do
        %input{:type => "text", :placeholder => "Enter winery or wine..."}
        %button.btn.btn-large.icon{:value => "Search"}
          %i.icon-search
          Search

