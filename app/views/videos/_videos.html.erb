<div id="videos">
  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @videos, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @videos %>
    </div>
  </div>

  <div style="overflow: auto;">
    <table style="background: white;">
      <tr>
        <th>Title</th>
        <th>Welcome Video?</th>
        <th>File Name</th>
        <th>Size</th>
        <th colspan=2>Action</th>
      </tr>
    <% for video in @videos %>
      <tr>
        <td><%=h video.title %></td>
        <td><%= video.primary ? "Yes" : link_to ("No", { :action => "make_primary", :id => video.id }, :method => :put, :title => "Click to turn into Welcome Video") %></td>
        <td><%=h video.name %></td>
        <td><%=h (video.file_size/(1024*1024)).round() %> MB</td>
        <td><%= link_to image_tag(video.url(:micro), :alt=>video.title), video.url(:micro), :title=> "Video" %></td>
        <td><%= link_to image_tag(video.url(:micro), :alt=>video.title), video.url, :title=> "Video", :rel=>"prettyPhoto[movies]" %></td>
        <td><a title="Despicable Me" rel="prettyPhoto[movies]" href="http://mark-server.dlinkddns.com:3000/videos/9?width=640&height=360">play</a></td>


        <td><%= link_to image_tag("icons/control_play.png", :border=>0, :alt=>"Show"), video, :title=> "Show", :class => 'dialog_form_link' %></td>
        <td><%= delete_link_image video, :class => 'delete' %></td>
      </tr>
    <% end %>
    </table>
  </div>

  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @videos, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @videos %>
    </div>
  </div>

</div>

