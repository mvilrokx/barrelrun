<% title("Youtube Video List") %>

<div class="prepend-top push-1 prepend-1 span-20 append-1 main last box">
  
  <div class="span-4">
    <h2>Video List</h2>
  </div>  
  <div class="span-3 last">
    <%= link_to 'Add New Video', new_video_path, :id => 'new_video', :class => 'dialog_form_link large' %>
  </div>
  <hr/>

  <div style="overflow: auto;">
    <table style="background: white;">
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Avg. Rating</th>
        <th>View Count</th>
        <th>Favorite Count</th>
        <th>Thumbnail</th>
        <th>Keywords</th>
        <th>Category</th>
      </tr>
      
    <% for video in @videos.videos %>
      <tr>
        <td><%=h video.title %></td>
        <td><%=h video.description %></td>
        <td><%=h video.rating.try(:average) %></td>
        <td><%=h video.view_count %></td>
        <td><%=h video.favorite_count %></td>
        <td><%= link_to image_tag(video.thumbnails[0].url, :width => 100, :height => 100), video.player_url %></td>
        <td><%=h video.keywords.join(", ") %></td>
        <td><%=h video.categories[0].label %></td>
      </tr>
    <% end %>
    </table>
  </div>
  
</div>
