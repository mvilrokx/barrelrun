<div id="awards">
  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @awards, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @awards %>
    </div>
  </div>

  <div style="overflow: auto;">
    <table style="background: white;">
      <tr>
        <th>Award</th>
        <th>Description</th>
        <th>Wine</th>
        <th>Pictures</th>
        <th colspan=3>Action</th>
      </tr>
    <% for award in @awards %>
      <tr>
        <td><%=h award.title %></td>
        <td><%=h award.description %></td>
        <td><%=h award.wine.name %></td>
        <% if award.pictures.length > 0 then %>
        <td><%= image_tag award.pictures[0].url(:thumb) %></td>
        <% else %>
        <td></td>
        <% end %>
        <td><%= edit_link_image edit_award_path(award), :class => 'dialog_form_link' %></td>
        <td><%= delete_link_image award, :class => 'delete' %></td>
      </tr>
    <% end %>
    </table>
  </div>

  <div class="pagination">
    <div class="span-13">
      <%= will_paginate @awards, :container => false %>
    </div>
    <div class="page_info span-7 last">
      <%= page_entries_info @awards %>
    </div>
  </div>

</div>

