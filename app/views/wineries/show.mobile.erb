<div id="home" class="current">
  <div class="toolbar">
		<h1><%=h @winery.winery_name %></h1>
    <a class="button cancel" <%= link_to h("Back"), wineries_path %></a>
	  <a class="button button add slideup" href="#map">Map</a>
  </div>

<td width="180">
        <% if @winery.pictures.length > 0 then %>
          <%= image_tag @winery.pictures[0].url %>
        <% end %>
</td>

        <div class="strong">
          <%=h @winery.address %>
          <%=h @winery.address2 %>
          <%=h @winery.address3 %>
        </div>

        <div class="strong">
          <%=h @winery.city %>, <%=h @winery.state %> <%=h @winery.zipcode %>
        </div>
        <div class="span-5 last strong">
          <%= image_tag("../images/phone.png", :alt=>"telephone") %><%= @winery.telephone %>
        </div>
        <div class="span-5 last strong">
          <a href="<%=h @winery.website_url %>" target="_blank"><%=h @winery.website_url %></a>
        </div>

			<div class="strong">
          <% if user_signed_in? %>
            <div class="stars">
              <form action="/wineries/<%= @winery.id %>/rating/" method="post">
                <%= render_stars @winery %>
              </form>
            </div>
          <% else %>
            <div class="stars">
                <%= render_stars @winery, true %>
            </div>
          <% end %>
			</div>

  <ul id="links" class="rounded">
    <li class="arrow"><%= link_to h("View and Enter Comments"), winery_comments_path(@winery) %></li>
    <li class="arrow"><a href="#welcomeVideoAndMore">Welcome Video and More</a></li>
    <li class="arrow"><%= link_to h("Pictures"), pictures_path(@winery) %></li>
    <li class="arrow"><a href="#events">Events</a></li>
    <li class="arrow"><a href="#specials">Specials</a></li>
    <li class="arrow"><%= link_to h("Wines"), wines_path %></li>
  </ul>

</div>

