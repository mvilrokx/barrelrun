<div id="events">
       <div class="toolbar">
         <h1>Events</h1>
         <a class="button cancel" href="#">Back</a>
       </div>
       <div class="body">
         <ul>
            <% for event in @winery.events %>
              <li><%= event.title %><br/>
              <%=h event.winery.city %>, <%=h event.winery.state %>
                <% if user_signed_in? %>
                  <div class="stars">
                    <form action="/events/<%= event.id %>/rating/" method="post">
                      <%= render_stars event %>
                    </form>
                  </div>
                <% else %>
                  <div class="stars">
                      <%= render_stars event, true %>
                  </div>
                <% end %>
              </li>
            <% end %>
            </ul>   
      </div>
</div>

<div id="specials">
       <div class="toolbar">
         <h1>Specials</h1>
         <a class="button cancel" href="#">Back</a>
       </div>
       <div class="body">
						<ul>
            	<% for special in @winery.specials %>
              <li><%= special.title %><br/>
              - <em>from</em> <%=h special.start_date.try(:strftime,'%m/%d/%Y') %> <em>till</em> <%=h special.end_date.try(:strftime,'%m/%d/%Y') %>
                <% if user_signed_in? %>
                  <div class="stars">
                    <form action="/specials/<%= wine.id %>/rating/" method="post">
                      <%= render_stars special %>
                    </form>
                  </div>
                <% else %>
                  <div class="stars">
                      <%= render_stars special, true %>
                  </div>
                <% end %>
              </li>
            <% end %>
            </ul>  
      </div>
</div>

<div id="wines">
       <div class="toolbar">
         <h1>Wines</h1>
         <a class="button cancel" href="#">Back</a>
       </div>
       <div class="body">
       <ul>
			<% for wine in @winery.wines %>  
          	<div class="span-6 last">
            	<div class="span-2">
              		<% if wine.pictures.length > 0 then %>
                		<%= image_tag wine.pictures[0].url(:thumb) %>
              		<% else %>
                		<%= image_tag("../images/no_image_available.png", :alt=>"No Image Found", :width=>"40", :height=>"40", :style=>"padding-bottom: 5px; vertical-align: middle;") %>
              		<% end %>
            	</div>  
            	<div class="span-4 last">
              		<strong><%= wine.name %></strong>
              		<% if user_signed_in? %>
                		<div class="stars">
                  		<form action="/wines/<%= wine.id %>/rating/" method="post">
                    	<%= render_stars wine %>
                  		</form>
                		</div>
              		<% else %>
                		<div class="stars">
                    	<%= render_stars wine, true %>
                		</div>
              		<% end %>
              		<%= link_to "#{image_tag('../images/pencil.png', :border=>0, :alt=>'Write a comment')}Write a Comment", wine_comments_path(wine), :title=> "Write a Comment" %>
        			<hr class="space" />
            	</div>  
          	</div>  
          	<% end %>
       </ul>   
       </div>
</div>


