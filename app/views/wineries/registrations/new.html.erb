<% title(resource_name.to_s.humanize + " Sign up") %>
<div class="container">
  <hr class="space">
  <div class="push-3 span-18 last main">
    <hr class="space">
    <div class="push-1 span-16">

      <h2><%= resource_name.to_s.humanize %> Sign up</h2>
      <em>Please search our website to see if your winery already exists.  If it does, then register by claiming your winery.  If it does not exist, then proceed with the registration process using this page.  Thank you.</em>
      <div class="edit_form">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= f.error_messages %>
          <%= f.hidden_field(:ownership_status, :value => "CLAIMED") %>
          <%= f.fields_for :subscription do |subscription_builder| %>
            <%= subscription_builder.hidden_field(:plan_id, :value => "Free") %>
        	<% end %>
	     * Required fields
<br>
          <fieldset>
            <legend class="subheading"><%= image_tag("../images/account_info.png", :border=>0, :width=>31, :height=>36, :style=>"padding-bottom: 10px; vertical-align: middle;") %>Account</legend>
           <%= f.label :username, "* User Name" %>
            <span class="div_texbox">
              <%= tag(:input, {:id => "winery_username",
                               :class => "fillout01",
                               :required => true,
                               :name => "winery[username]",
                               :type => :text,
                               :placeholder => 'screen name, 19 chars or less',
                               :value => f.object.username}) %>
          	</span>

            <%= f.label :password, "* Password" %>
            <span class="div_texbox">
              <%= f.password_field :password, :required => true, :class => "fillout01" %>
          	</span>
            <%= f.label :password_confirmation, "* Password confirmation" %>
            <span class="div_texbox">
              <%= f.password_field :password_confirmation, :required => true , :class => "fillout01" %>
          	</span>
          	<hr>
		<br>
          </fieldset>
          <fieldset>
            <legend class="subheading">
              <%= image_tag("../images/personal_info.png", :border=>0, :width=>31, :height=>36, :style=>"padding-bottom: 10px; vertical-align: middle;") %> Personal Information
            </legend>
            <%= f.label :winery_name, "* Winery name" %>
            <span class="div_texbox">
              <%= f.text_field :winery_name, :required => true, :class => "fillout01" %>
          	</span>
            <%= f.label :owner_gm_name, "Owner/GM name"  %>
            <span class="div_texbox">
              <%= f.text_field :owner_gm_name, :class => "fillout01" %>
          	</span>
            <%= f.label :owner_gm_email, "Owner/GM email" %>
            <span class="div_texbox">
              <%= f.text_field :owner_gm_email, :class => "fillout01" %>
          	</span>
            <%= f.label :contact_first_name, "* Contact first name" %>
            <span class="div_texbox">
              <%= f.text_field :contact_first_name, :required => true, :class => "fillout03" %>
          	</span>
            <%= f.label :contact_last_name, "* Contact last name"  %>
            <span class="div_texbox">
              <%= f.text_field :contact_last_name, :required => true, :class => "fillout03" %>
          	</span>
            <%= f.label :telephone, "* Telephone" %>
            <span class="div_texbox">
              <%= f.text_field :telephone, :required => true, :class => "fillout03" %>
          	</span>
            <%= f.label :email, "* Email" %>
            <span class="div_texbox">
              <%= tag(:input, {:id => "winery_email", :name => "winery[email]", :required => true,
                               :type => :email, :placeholder => 'e.g. user@domain.com',
                               :value => f.object.email, :class => "fillout01"}) %>
          	</span>
            <%= f.label :address, "* Address" %>
            <span class="div_texbox">
              <%= f.text_field :address, :required => true, :class => "fillout01" %>
          	</span>
            <%= f.label :address2, "Address 2" %>
            <span class="div_texbox">
              <%= f.text_field :address2, :class => "fillout01" %>
          	</span>
            <%= f.label :city, "* City" %>
            <span class="div_texbox">
              <%= f.text_field :city, :required => true, :class => "fillout03" %>
          	</span>
            <%= f.label :state, "* State" %>
            <span class="div_texbox">
              <%= f.text_field :state, :required => true, :class => "fillout04" %>
          	</span>
            <%= f.label :zipcode, "* Zipcode" %>
            <span class="div_texbox">
              <%= f.text_field :zipcode, :required => true, :class => "fillout04" %>
          	</span>
            <%= f.label :country %>
            <span class="div_texbox">
              <%= f.text_field :country, :class => "fillout04" %>
          	</span>
            <%= f.label :website_url, "* Website URL" %>
            <span class="div_texbox">
              <%= f.text_field :website_url, :required => true, :class => "fillout01" %>
          	</span>
          	<hr>
		<br>
          </fieldset>

          <fieldset>
            <legend class="subheading"><%= image_tag("../images/account_info.png", :border=>0, :width=>31, :height=>36, :style=>"padding-bottom: 10px; vertical-align: middle;") %>Additional Information</legend>
           <div class="span-16 last">
	  <%= f.label :descr, "Description" %>
      <span class="div_texbox3_descr" style="height: auto;">
        <%= f.text_area :descr, :class => "fillout05_descr" %>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :hours, "Hours" %>
      <span class="div_texbox4_hours" style="height: auto;">
        <%= f.text_area :hours, :class => "fillout06_hours"  %>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :price, "Price range" %>
      <span class="div_texbox">
        <%= f.text_field :price, :class => "fillout01" %>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :parking, "Parking" %>
      <span class="div_texbox">
        <%= f.check_box :parking %>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :handicap, "Handicaped accessible" %>
      <span class="div_texbox">
        <%= f.check_box :handicap%>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :restaurant, "Restaurant" %>
      <span class="div_texbox">
        <%= f.check_box :restaurant %>
    	</span>
	<div/>

	<div class="span-16 last">
 	  <%= f.label :fam_friendly, "Family friendly" %>
      <span class="div_texbox">
        <%= f.check_box :fam_friendly %>
    	</span>

	<div class="span-16 last">
 	  <%= f.label :accept_credit, "Credit cards accepted" %>
      <span class="div_texbox">
        <%= f.check_box :accept_credit %>
    	</span>
	<div/>

	<%= f.label :accepts_terms_of_service, "* Accept" %>
            <span class="div_texbox">
              <%= f.check_box :accepts_terms_of_service, :required => true %>&nbsp;&nbsp;<%=link_to "Terms of Service", '/pages/biz_terms_of_service', :class=>"dialog_link" %>
          	</span>
            <span class="div_texbox">
              <%= f.submit "Sign up" %>
          	</span>
          <hr>
          </fieldset>

        <% end -%>
      <%= render :partial => "shared/devise_links" %>
      </div>
    </div>
  </div>
</div>

